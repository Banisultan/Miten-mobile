<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    tools:context=".FinalActivity.LoginActivity">

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textSize="@dimen/normal_judul"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorblack_v2"
                android:fontFamily="@font/neuron_regular"/>

            <ImageView
                android:id="@+id/imageprofile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:id="@+id/layoutbeforeproses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Silahkan scan wajah untuk melanjutkan \nlogin anda"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:textColor="@color/colorblack_v2"
                    android:textSize="@dimen/normal_text"
                    android:fontFamily="@font/neuron_regular"/>

                <LinearLayout
                    android:id="@+id/tombolscan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_on"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Pindai Wajah"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/colorwhite"
                        android:textSize="14dp"
                        android:background="?attr/selectableItemBackground"
                        android:fontFamily="@font/neuron_regular"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="atau"
                    android:textSize="@dimen/normal_text"
                    android:textColor="@color/colorblack_v2"
                    android:fontFamily="@font/neuron_regular"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:id="@+id/tombolusername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_button_off">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image_button"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Login dengan username"
                            android:textStyle="bold"
                            android:textColor="@color/colororange"
                            android:layout_marginLeft="10dp"
                            android:textSize="14dp"
                            android:fontFamily="@font/neuron_regular"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>