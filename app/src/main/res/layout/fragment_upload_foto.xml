<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSurvey.UploadFotoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layoutbottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorwhitebg"
                android:padding="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shape"
                    android:padding="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foto Tampak Depan"
                        android:fontFamily="@font/neuron_regular"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imagedepan1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/vec_add_image"
                            android:padding="10dp"
                            android:background="@drawable/bg_image"/>

                        <ImageView
                            android:id="@+id/imagedepan2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/vec_add_image"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/bg_image"/>

                        <ImageView
                            android:id="@+id/imagedepan3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/vec_add_image"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/bg_image"/>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shape"
                    android:padding="15dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foto Sisi Kiri"
                        android:fontFamily="@font/neuron_regular"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imagekiri1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/vec_add_image"
                            android:padding="10dp"
                            android:background="@drawable/bg_image"/>

                        <ImageView
                            android:id="@+id/imagekiri2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/vec_add_image"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/bg_image"/>

                        <ImageView
                            android:id="@+id/imagekiri3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/vec_add_image"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/bg_image"/>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shape"
                    android:padding="15dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foto Sisi Kanan"
                        android:fontFamily="@font/neuron_regular"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imagekanan1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/vec_add_image"
                            android:padding="10dp"
                            android:background="@drawable/bg_image"/>

                        <ImageView
                            android:id="@+id/imagekanan2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/vec_add_image"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/bg_image"/>

                        <ImageView
                            android:id="@+id/imagekanan3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/vec_add_image"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/bg_image"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutbottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="right">

                    <LinearLayout
                        android:id="@+id/tombolprev"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:background="@drawable/bg_button"
                        android:gravity="center"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kembali"
                            android:fontFamily="@font/neuron_regular"
                            android:textStyle="bold"
                            android:textColor="@color/colorwhite"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tombollanjut"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:gravity="center"
                        android:background="@drawable/bg_button">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lanjutkan"
                            android:fontFamily="@font/neuron_regular"
                            android:textStyle="bold"
                            android:textColor="@color/colorwhite"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

</FrameLayout>