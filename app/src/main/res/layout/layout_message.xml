<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorblackbg"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imagemessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/vec_loading"/>

                <TextView
                    android:id="@+id/textjudul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/neuron_regular"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorblack"
                    android:text="Mohon Tunggu"/>

                <TextView
                    android:id="@+id/textmessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/neuron_regular"
                    android:gravity="center"
                    android:textColor="@color/colorblack"
                    android:text="Sedang melakukan pengecekan"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tomboloke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/bg_button_bottom"
                android:gravity="center">

                <TextView
                    android:id="@+id/texttombol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/neuron_regular"
                    android:textColor="@color/colorwhite"
                    android:textStyle="bold"
                    android:text="OKE"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>