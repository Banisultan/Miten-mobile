<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalActivity.HomeFragment.HomeFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshhome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorwhite"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <ImageView
                    android:id="@+id/imagebg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/imagelogo"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"/>

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/texthari"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sabtu"
                            android:textColor="@color/colorwhite"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/neuron_regular"/>

                        <TextView
                            android:id="@+id/textdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="04 April 2020"
                            android:textColor="@color/colorwhite"
                            android:textSize="10dp"
                            android:fontFamily="@font/neuron_regular"/>

                        <TextView
                            android:id="@+id/textwaktu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16:17 WIB"
                            android:textColor="@color/colorwhite"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_marginTop="5dp"
                            android:visibility="gone"
                            android:fontFamily="@font/neuron_regular"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textnama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hai, Rifki Vianda"
                        android:textColor="@color/colorwhite"
                        android:textStyle="bold"
                        android:textSize="13dp"
                        android:fontFamily="@font/neuron_regular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selamat Bekerja..."
                        android:layout_marginTop="3dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorwhite"
                        android:fontFamily="@font/neuron_regular"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Data Survei"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="@color/colorblack"
                    android:fontFamily="@font/neuron_regular"/>

                <TextView
                    android:id="@+id/textupdatedate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terakhir diupdate 01 Mei 2020, 14:00 WIB"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="10dp"
                    android:fontFamily="@font/neuron_regular"
                    android:textStyle="normal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shape"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageleft"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_button_oval_grey"
                            android:padding="7dp"/>

                        <TextView
                            android:id="@+id/textwaiting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="30dp"
                            android:textColor="@color/colorblack"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/neuron_regular"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Created"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/neuron_regular"/>
                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorgrey"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageright"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_button_oval_green"
                            android:padding="7dp"/>

                        <TextView
                            android:id="@+id/textdone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="30dp"
                            android:textColor="@color/colorgreen"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/neuron_regular"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Approve"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/neuron_regular"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kategori"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="@color/colorblack"
                    android:fontFamily="@font/neuron_regular"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/viewkategori"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</FrameLayout>