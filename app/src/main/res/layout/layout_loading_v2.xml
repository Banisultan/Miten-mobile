<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_v8"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_line_left"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="left|center">

                <ProgressBar
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:progress="5"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/colorbg"/>

                <TextView
                    android:id="@+id/textmessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/neuron_regular"
                    android:textSize="@dimen/normal_text"
                    android:textStyle="normal"
                    android:textColor="@color/colorblack_v2"
                    android:layout_marginLeft="10dp"
                    android:text="Sedang mengupload data"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>