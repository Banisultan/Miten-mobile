<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorbg"
        android:gravity="center|left"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center|left">

            <ImageView
                android:id="@+id/tombolkembali"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/texttoolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/neuron_regular"
                android:textStyle="bold"
                android:text="-"
                android:textSize="20dp"
                android:textColor="@color/colorwhite" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/tomboledit"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/bg_shape_v2"
                android:padding="5dp"/>

            <ImageView
                android:id="@+id/tombolapprove"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/bg_shape_v2"
                android:layout_marginLeft="10dp"
                android:padding="5dp"/>

            <ImageView
                android:id="@+id/tombolapproverepair"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/bg_shape_v2"
                android:layout_marginLeft="10dp"
                android:padding="5dp"/>

            <ImageView
                android:id="@+id/tomboladd"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/bg_shape_v2"
                android:layout_marginLeft="10dp"
                android:padding="5dp"/>

            <ImageView
                android:id="@+id/tombollock"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/bg_shape_v2"
                android:layout_marginLeft="10dp"
                android:padding="5dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>